int temperaturePin = A0; 
int ledPin = 9; 
float threshold = 30.0;
volatile bool ledState = false; // Flag for LED state

void setup() 
{
  pinMode(ledPin, OUTPUT); //here we set LED pin as an OUTPUT so it can turned ON or OFF
  pinMode(2, INPUT_PULLUP);  
  //set pin 2 (button) as an input and enable internal pull-up resistor
  //this makes the default state of the button is HIGH
  // when we press the button, then it connect to GRN and state change to LOW
  Serial.begin(9600);  
  attachInterrupt(digitalPinToInterrupt(2), toggleLED, FALLING);
  //Attach an interrupt to pin 2
  //Call the function toggleLED()
  // FALLING - high to low transition
}


void toggleLED() 
{
  ledState = !ledState;  // Toggle LED state
  digitalWrite(ledPin, ledState ? HIGH : LOW);
  //Turn LED ON if ledState is true, otherwise turns it OFF
}

void loop() 
{
  int sensorValue = analogRead(temperaturePin);
  float voltage = sensorValue * (5.0 / 1023.0);
  float temperature = (voltage - 0.5) * 100;

  Serial.print("Temperature:- ");
  Serial.print(temperature);
  Serial.println(" Â°C");

  delay(1000);
}
